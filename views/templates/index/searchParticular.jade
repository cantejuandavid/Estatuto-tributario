div(id="cargando",ng-show="cargando", layout="column",layout-sm="column",layout-align="center center", style="padding: 60px")
	img(src="images/loader.gif",width="30")
div(ng-if='res.error == true')
	h2 {{res.message}}
	p Por favor dirijase a la página principal		
div(ng-if='res.error != true')
	div(ng-repeat="i in res.data  | orderBy:'number'").type
		h2(ng-if='i.centerTitle', layout='row', layout-align='center center') {{i.title}}
		h2(layout="column",layout-sm="column",layout-align="center center")
			a(ng-href="#/buscar/{{i.type}}/{{i.number}}",ng-if="i.type !== 'no-libro' && i.type != 'no-titulo'") 
				span {{i.type | uppercase}}
				span &nbsp;				
				span(ng-if="i.type != 'articulo' && i.number") {{romanize(i.number)}}				
				span(ng-if="i.type == 'articulo'") {{numberEstatuto(i.number)}}
		h3(layout="column",layout-sm="column",layout-align="center center") {{i.name}}
		div(ng-bind-html="i.description").description
		md-content(ng-if="i.history.length > 0")
			h2.md-toolbar-tools 
				span {{ 'historia' | uppercase}}
				span(flex)
				md-button(ng-click="toggleopenHistory();") {{openHistory.label}}
			md-list(layout="column",ng-hide="openHistory.val",id="listHistory")
				md-item(ng-repeat="h in i.history | orderBy:'-year'").md-3-line.hiss
					div(ng-if="h.year > 1").cir
						h5 {{h.year}}
					div.md-item-text
						h3 {{h.type | uppercase}}
						p(ng-bind-html="h.content")
		div(ng-if="i.type !== 'articulo'")
			p.
				
				Este 
				<span ng-if="i.type == 'libro'"> {{i.type}}</span>
				<span ng-if="i.type != 'libro'"> titulo</span>
				comprende los artículos
				<a ng-href="#/buscar/articulo/{{i.firstArt}}">{{i.firstArt}}</a>
				hasta el 
				<a ng-href="#/buscar/articulo/{{i.lastArt}}">{{i.lastArt}}</a>
			section(layout="row",layout-sm="column",layout-align="center center")
				a(ng-href="#/buscar/{{i.type}}/{{i.number}}/titulo/todos",ng-if="i.type=='libro'")
					md-button.md-raised Ver Titulos
				a(ng-href="#/buscar/libro/{{res.libro.number}}/titulo/{{i.number}}/capitulo/todos",ng-if="i.type=='titulo'")
					md-button.md-raised Ver Capitulos	
				a(ng-href="#/buscar/{{res.type}}/{{i.number}}/todos")
					md-button.md-raised.md-primary Ver Artículos
		div.buttonsSocial
			md-icon(md-svg-src="images/svg/share5.svg").md-icon
			md-icon(md-svg-src="images/svg/star-shape3.svg").md-icon
div(ng-if="res.links")
	div.next
		span
			a(href="#/buscar/articulo/{{res.links.next}}") 
				md-icon(md-svg-src="images/svg/right.svg",alt="Artículo {{res.links.next}}", title="Artículo {{res.links.next}}")
	div.prev
		span(ng-if="res.links.prev")
			a(href="#/buscar/articulo/{{res.links.prev}}")
				md-icon(md-svg-src="images/svg/left.svg",alt="Artículo {{res.links.prev}}", title="Artículo {{res.links.prev}}")