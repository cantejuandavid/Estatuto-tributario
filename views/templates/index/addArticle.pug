h1 Agregar articulos al Estatuto

form
	div(layout="row",layout-wrap)
		div(flex="40")
			md-input-container
				label numero
				input(type="number",name="number", ng-model="art.number", step="any",required)
			md-input-container
				label name
				input(type="text",name="name", ng-model="art.name",required)
			div
				md-select(name="centerTitle", ng-model="art.centerTitle", placeholder="centerTitle")
					md-option(ng-value="true") true
					md-option(ng-value="false") false	
			md-input-container
				label title
				input(type="text",name="name", ng-model="art.title")
		div(flex="60")
			div
				label description
			div
				textarea(name="description", cols="50", rows="10", ng-model="art.description",required)
			div
				md-select(name="id_libro", ng-model="art.id_libro", placeholder="id_libro")
					md-option(ng-value="") Ninguno
					md-option(value="{{o._id}}", ng-repeat="o in ids.id_libro | orderBy:'name'") {{romanize(o.number)}} - {{o.name}}
			div
				md-select(name="id_titulo", ng-model="art.id_titulo", placeholder="id_titulo")
					md-option(ng-value="") Ninguno
					md-option(value="{{o._id}}", ng-repeat="o in ids.id_titulo | orderBy:'name'") {{romanize(o.number)}} - {{o.name}}
			div
				md-select(name="id_capitulo", ng-model="art.id_capitulo", placeholder="id_capitulo")
					md-option(ng-value="") Ninguno
					md-option(value="{{o._id}}", ng-repeat="o in ids.id_capitulo | orderBy:'name'") {{romanize(o.number)}} - {{o.name}}
	h2 Historial
	div(layout="row", layout-wrap)
		div(ng-repeat="h in art.history",flex="50")
			md-card
				md-card-actions
					md-card-icon-actions
						md-button(ng-click="removeHistory($index)").md-icon-button
							md-icon
								i.material-icons.mod close
				md-card-content
					md-input-container(flex-gt-sm).md-block
						label Type
						input(ng-model="h.type", required)
					md-input-container(flex-gt-sm).md-block
						label Year
						input(ng-model="h.year", required)
					md-input-container(flex-gt-sm).md-block
						label Content
						textarea(ng-model="h.content", rows="3", cols="7", required)
			
				
	div(layout="row")
